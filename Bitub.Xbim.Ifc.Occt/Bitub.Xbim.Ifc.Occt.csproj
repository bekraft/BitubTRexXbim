<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Title>Bitub.Xbim.Ifc.Occt</Title>
    <Description>Ifc Occt Interop Adapter Library using Xbim</Description>
    <Configurations>Test;Dev;Release;Debug;XbimDev</Configurations>
    <RootNamespace>Bitub.Xbim.Ifc</RootNamespace>
    <LangVersion>10</LangVersion>
    <IsPackable>true</IsPackable>
    <Platforms>x64</Platforms>
    <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Bitub.Xbim.Ifc\Bitub.Xbim.Ifc.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Xbim.ModelGeometry.Scene" Version="6.1.847-netcore" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsWindows)' == 'true'">
    <PackageReference Include="Xbim.Geometry.Engine.Interop" Version="6.1.847-netcore" />
  </ItemGroup>
  
</Project>
