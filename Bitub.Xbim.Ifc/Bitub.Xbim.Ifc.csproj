<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Title>Bitub.Xbim.Ifc</Title>
    <Description>Xbim IFC toolset adaption</Description>
    <Configurations>Debug;Release;Test;Dev</Configurations>
    <RootNamespace>Bitub.Xbim.Ifc</RootNamespace>
    <LangVersion>8</LangVersion>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == '' ">
    <Configuration>Debug</Configuration>
  </PropertyGroup>

  <PropertyGroup Condition="'$(IsLinux)' == 'true' Or '$(IsOSX)' == 'true'">
    <TargetFrameworks>net6.0</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup Condition="'$(IsWindows)' == 'true'">
    <TargetFrameworks>net472;net48;net481;net6.0</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Test|AnyCPU'">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Test\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Dev|AnyCPU'">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>portable</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Dev\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugSymbols>false</DebugSymbols>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)' != 'Dev' And '$(Configuration)' != 'Debug'">    
    <PackageReference Include="Bitub.Dto" Version="1.0.23072-Dev.27697" />
    <PackageReference Include="Xbim.Common" Version="5.1.341" />    
    <PackageReference Include="Xbim.Ifc" Version="5.1.341" />
    <PackageReference Include="Xbim.Ifc2x3" Version="5.1.341" />
    <PackageReference Include="Xbim.Ifc4" Version="5.1.341" />
    <PackageReference Include="Xbim.IO.MemoryModel" Version="5.1.341" />
    <PackageReference Include="Xbim.Geometry.Engine.Interop" Version="5.1.437" />
    <PackageReference Include="Xbim.IO.Esent" Version="5.1.341" />
    <PackageReference Include="Xbim.ModelGeometry.Scene" Version="5.1.437" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Dev' Or '$(Configuration)' == 'Debug'">
    <PackageReference Include="Bitub.Dto" Version="1.0.23072-Dev.27697" />
    <PackageReference Include="Xbim.Common" Version="5.9.375-develop" />    
    <PackageReference Include="Xbim.Ifc" Version="5.9.375-develop" />
    <PackageReference Include="Xbim.Ifc2x3" Version="5.9.375-develop" />
    <PackageReference Include="Xbim.Ifc4" Version="5.9.375-develop" />
    <PackageReference Include="Xbim.IO.MemoryModel" Version="5.9.375-develop" />    
    <PackageReference Include="Xbim.IO.Esent" Version="5.9.375-develop" />
    <PackageReference Include="Xbim.ModelGeometry.Scene" Version="5.1.443-develop" />
  </ItemGroup>

  <ItemGroup Condition="('$(Configuration)' == 'Dev' Or '$(Configuration)' == 'Debug') And '$(IsWindows)' == 'true'">
    <PackageReference Include="Xbim.Geometry.Engine.Interop" Version="5.1.443-develop" />
  </ItemGroup>

  <Target Name="VersionReport" BeforeTargets="BeforeBuild">
    <Message Text="$(TargetFramework) ==&gt; Building version  : $(BuildVersion)" Importance="High" />
    <Message Text="$(TargetFramework) ==&gt; Building platform : Windows" Importance="High" Condition="'$(IsWindows)' == 'true'" />
    <Message Text="$(TargetFramework) ==&gt; Building platform : OSX or Linux" Importance="High" Condition="'$(IsLinux)' == 'true' Or '$(IsOSX)' == 'true'" />
  </Target>

</Project>